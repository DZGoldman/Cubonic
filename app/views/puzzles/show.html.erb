<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>">
  <h1><%= message %></h1>
</div>
<% end %>

<div class="container">
  <div class="row user-puzzles-header">
    <h2 class="col-md-6">

        Created by
        <%=@puzzle.user.user_name%> in
      <%= @puzzle.clicks_created %>
      clicks.
      <%if @puzzle.best_solver %></h2>

    <!-- <h1 class="col-md-6">
      <% if logged_in? %>
      <%= link_to "Create A New Puzzle", new_puzzle_path %>
      <% end %>
    </h1> -->
  </div>
  <div class="row">
    <div class="col-md-4">
      Last Solved by
      <%= @puzzle.best_solver %>
      <% else %>
      Yet to be solved.
      <% end %>
      Click on this grid...    ...until it looks like this grid.
      Clicking rotates all of the cubes in a 3x3 radius. No clicking on the edges.
    </div >
  </div>
</div>

<div class="container creator-header-container">
  <div class="row creator-header-row">




      <h3 class="col-md-6 creator-header" >

      </h3>
      <h3 class="col-md-6 creator-header">

    </h3>

  </div>
</div>
<% if @puzzle.notes!="" && @puzzle.user_id==1  %>
<p class="notes">
<%= @puzzle.notes %></p>
<%end %>


<%# put pattern in a hidden div so javascript can access it %>
<div id="pattern"><%=@puzzle.pattern %></div>


<div class="container">

  <div class="row" id="show_page_boards">

    </div>

    <div class="board col-md-6" id="click_board">
      <%= render partial: 'grid' %>
    </div>

    <div class="board col-md-6" id="static_board">
      <%= render partial: 'grid' %>
    </div>

</div>
<div class="container">
  <div class="row">
  <div class="reset button" id='reset'>Reset </div>

  <% if current_user && current_user.id != @puzzle.user_id %>
  <div class="button" id="win">
    <%= link_to "Solved! Click to record your win", puzzle_path(@puzzle), method: :win  %>
  </div>
  <%else %>
  <div class= "button" id="win">
    Solved
  </div>
  <% end %>


  </div>

  <div class"row">
    <p class='col-md-5 col-md-offset-1 directions'>

    </p>
    <p class='col-md-6 directions'>

    </p>
  </div>
</div>



