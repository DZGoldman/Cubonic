<div id="status_bar">
<% if logged_in? %>
  <p> Loggin in as: <%= current_user.user_name %> <%=link_to "Log Out", logout_path %></p>
  <% if current_user.is_admin %>
    <p><%= "Admin" %>  </p>
  <% end %>
  <%else%>
      <p><%=link_to "Login", login_path %> <%=link_to "Sign Up", new_user_path %> </p>

<% end %>
</div>
