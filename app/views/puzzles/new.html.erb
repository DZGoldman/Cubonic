<h1>A New Puzzle</h1>
<%= render partial: 'bar' %>


<%= form_for(@puzzle) do |f| %>
<ul>
  <% @puzzle.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :notes %> (optional)<br/>
  <%= f.text_area :notes %>
  <%= f.submit %>
</p>
<p>
  <%= f.text_area :pattern %>
</p>
<p>
  <%= f.text_area :clicks_created %>
</p>

<% end %>

<div>

  <div>
    <div  class="board" id="new-board">
    <%= render partial: 'grid' %>
    </div>
    <%= render partial: 'buttons' %>
  </div>
</div>

<div class="home">
  <%= link_to "back to the puzzles", puzzles_path %>
</div>
