<h1 id='new-headline'>Edit Your puzzle</h1>

<div id="pattern"><%=@puzzle.pattern %></div>

<%= form_for(@puzzle) do |f| %>
<ul>
  <% @puzzle.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :notes %><br/>
  <%= f.text_area :notes %>
</p>
<p>
  <%= f.text_area :pattern %>
</p>
<p>
  <%= f.text_area :clicks_created %>
</p>
<p class="submit_button" id='create-puzzle'>
  <%= f.submit %>
</p>
<% end %>

<div>
  <div , class="board" id="edit_board">
    <%= render partial: 'grid' %>
  </div>
  <div id="reset-new"  class="button reset">Reset </div>
</div>
