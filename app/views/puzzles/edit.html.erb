<h1>Edit Your puzzle</h1>   <%= render partial: 'bar' %>


  <div id="pattern"><%=@puzzle.pattern %></div>
  <div id="starting_clicks"><%= @puzzle.clicks_created %> </div>



  <%= form_for(@puzzle) do |f| %>
    <ul>
    <% @puzzle.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :notes %><br />
      <%= f.text_area :notes %>
    </p>
    <p>
      <%= f.label :pattern %><br />
      <%= f.text_area :pattern %>
    </p>
    <p>
      <%= f.label :clicks_created %><br />
      <%= f.text_area :clicks_created %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>




<%= render partial: 'editgrid' %>
<%= link_to "back to the puzzles", puzzles_path %>
